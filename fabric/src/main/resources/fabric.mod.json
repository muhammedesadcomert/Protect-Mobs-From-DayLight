  "authors": [
    "AnEngineerMan"
  ],
  "contact": {
    "homepage": "https://github.com/muhammedesadcomert/Protect-Mobs-From-DayLight",
    "sources": "https://github.com/muhammedesadcomert/Protect-Mobs-From-DayLight"
  },

  "license": "GNU LGPLv3",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.muhammedesadcomert.protectmobsfromdaylight.ProtectMobsFromDayLight"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.14",
    "fabric-api": "*",
    "minecraft": "~1.19.2",
    "java": ">=17"
  },
